
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2> Hoşgeldin @ViewBag.AdSoyad</h2>

<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="col-12 col-lg-3">

        <div class="card mt-5">
            <div class="card-header bg-dark text-white">
                Kullanıcı Bilgisi
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">@ViewBag.AdSoyad</li>
                <li class="list-group-item">@ViewBag.EPosta </li>
                <li class="list-group-item">@ViewBag.TelefonNo</li>
            </ul>
        </div>

    </div>
</div>