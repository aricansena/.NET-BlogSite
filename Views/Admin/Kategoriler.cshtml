
@model  IEnumerable<Blogsite.Models.Kategori>

@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<table class="table table-bordered table-striped table-dark mt-5">
    <tr class="text-center">
        <th>
            @Html.DisplayNameFor(model => model.KategoriAdi)
        </th>
        <th>
        </th>
        <th>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr class="text-center">
            <td>
                @Html.DisplayFor(modelItem => item.KategoriAdi)
            </td>
            <td>
                @Html.ActionLink("Güncelle", "Guncelle", new { id = item.Kategori_id }, new { @class = "btn btn-light" })
            </td>
            <td>
                @Html.ActionLink("Sil", "Sil", new { id = item.Kategori_id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
        }
    </table>
<p class="mt-2">
    @Html.ActionLink("Yeni Kategori Ekle", "KategoriEkle", new { }, new { @class = "btn btn-light" })
</p>

