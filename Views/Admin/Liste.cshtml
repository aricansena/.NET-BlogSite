
@{
    ViewBag.Title = "Liste";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



@if (ViewBag.blogSayisi != 0)
{
    <div class="container mt-5">
        <div class="row row-with-padding">
            @foreach (var item in ViewBag.blog)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                    <div class="card bg-dark text-white" style="border-radius:0; height:300px">
                        <img src="@item.ResimUrl" class="card-img-top" alt="..." style="border-radius:0; height: 200px; object-fit: cover; object-position: center;">
                        <div class="card-header text-white p-0 mt-1" style="border-radius:0 ;height:100px">
                            <h4>@item.Baslik</h4>
                            <h5>@item.AltBaslik</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <div class="container d-flex justify-content-center align-items-center mt-5">
        <div class="col-12 col-lg-6">
            <h3 class="text-white mt-5">@ViewBag.Kategori.KategoriAdi Kategorisi</h3>
            <div class="alert alert-secondary mt-4" role="alert">
                @ViewBag.Kategori.KategoriAdi Kategorisine ait kayıt bulunmamaktadır.
            </div>
        </div>
    </div>
}
