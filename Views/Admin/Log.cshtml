@model IEnumerable<Blogsite.Models.Logs>
    @using GridMvc.Html 
@{
    ViewBag.Title = "Log";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    @Html.Grid(Model).Columns(column =>
{
    column.Add(m => m.Kullanici.Ad).Titled("Personel Ad").Filterable(true);
    column.Add(m => m.Kullanici.Soyad).Titled("Soyad");
    column.Add(m => m.logAciklama).Titled("Açıklama");
    column.Add(m => m.actionAd).Titled("Action Adı");
    column.Add(m => m.controllerAd).Titled("Controller Adı");
    column.Add(m => m.tarih).Titled("Tarih").Sortable(true);
}).WithPaging(15)
</div>
