
@{
    ViewBag.Title = "BlogEkle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="col-12 col-lg-6">
        <div class="card">
            <div class="card-header">
                <h3>Blog Yazısı Ekleme</h3>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("BlogEkle", "Admin", FormMethod.Post))
                {
                    <div class="mb-3">
                        <label for="blogBaslik" class="form-label">Konu Başlığını Giriniz</label>
                        <input type="text" class="form-control" name="blogBaslik" id="blogBaslik">
                    </div>
                    <div class="mb-3">
                        <label for="blogAciklama" class="form-label">Açıklama giriniz.</label>
                        <input type="text" class="form-control" name="blogAciklama" id="blogAciklama">
                    </div>
                    <div class="mb-3">
                        <label for="selectkategori" class="form-label">Kategori Seçiniz</label>
                        <select class="form-select" name="selectkategori" id="selectkategori">
                            @foreach (var kategori in ViewBag.kategoriler)
                            {
                                <option value="@kategori.Kategori_id">@kategori.KategoriAdi</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-dark" type="submit">Blog Yazısı Ekle</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
