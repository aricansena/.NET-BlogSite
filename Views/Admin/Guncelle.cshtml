
@model Blogsite.Models.Kategori

@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<div class="container  d-flex justify-content-center align-items-center mt-5">

    <div class="col-12 col-lg-6">
        <h2 class="text-white">Kategori Güncelleme İşlemi</h2>
        <hr />
        @using (Html.BeginForm("Guncelle", "Admin", FormMethod.Post))
        {
            @Html.HiddenFor(model => model.Kategori_id)
            <div class="row">
                <div class="col mb-3 text-white">
                    @Html.LabelFor(model => model.KategoriAdi, htmlAttributes: new { @class = "col-sm-3 col-form-label" })
                </div>
                <div class="col text-white">
                    @Html.EditorFor(model => model.KategoriAdi, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="col text-start d-gird">
                    <button class="btn btn-light" type="submit">Güncelle</button>
                </div>
            </div>
        }
    </div>
</div>